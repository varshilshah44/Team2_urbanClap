<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>React App</title>

  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js" defer></script>
  <script src="../public/javascripts/dashboard.js" defer></script>
  <script src="../public/javascripts/adminDashboard.js" defer></script>

  <link rel="stylesheet" type="text/css" href="../public/stylesheets/dashboard.css" media="screen" />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous" />
</head>
<header>
  <%- include('./partials/header.ejs')%>
</header>

<body>
  <template id="template"> </template>
  <div id="app">
    <script>
      let admin = <%= admin%>;
    </script>
    <% if (admin) { %>
      <button type="button" id="createCat">Create Category</button>
      <button type="button" id="service">Create Service</button>
      <button type="button" id="getUsers">Get Users</button>
      <button type="button" id="getAllBooking">Get All Bookings</button>
      <% } %>
        <button type="button" id="cat">Get Category and it's Services</button>
        <% if (!admin) { %>
          <button type="button" id="getBooking">Get Bookings</button>
          <button type="button" id="profile">Get Profile</button>
          <% } %>
            <button type="button" id="logout">Logout</button>

  </div>
  <div id="profileDiv" hidden>
    <div class="container">
      <h1>Edit Profile</h1>
      <hr />
      <div class="row">
        <!-- edit form column -->
        <div class="col-md-9 personal-info">
          <div id="alertDiv" class="alert alert-info alert-dismissable" hidden>
            <i class="fa fa-coffee"></i>
            <p id="alertMessage"></p>
          </div>
          <h3>Personal info</h3>

          <form id="profileForm" class="form-horizontal" role="form">
            <div class="form-group">
              <label id="email" class="col-lg-3 control-label">Email:</label>
            </div>
            <div class="form-group">
              <label class="col-lg-3 control-label">User Name:</label>
              <div class="col-lg-8">
                <input id="name" class="form-control" type="text" />
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label">Mobile:</label>
              <div class="col-md-8">
                <input id="mobile" class="form-control" type="text" />
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label">Address:</label>
              <div class="col-md-8">
                <input id="address" class="form-control" type="text" />
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label"></label>
              <div class="col-md-8">
                <input id="profileSubmitBtn" type="button" class="btn btn-primary" value="Save Changes" />
                <span></span>
                <input type="reset" class="btn btn-default" value="Cancel" />
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <hr />
  </div>
  <div id="bookDiv" hidden>

  </div>

  <div id="categoryData"></div>
  <div id="serviceData"></div>
  <div id="vendorData"></div>

  <div id="book" style="display: none; margin-top: 630px">
    <form id="bookform" style="margin-left: 35%; height: 600px; margin-top: 40px">
      <p style="font-size: 30px; margin-left: 70px; color: lightslategray">
        Booking
      </p>
      <div class="form-group">
        <label for="exampleInputEmail1">Booking Date</label>
        <input type="date" class="form-control" aria-describedby="emailHelp" style="width: 300px" id="date" />
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">bookingTime</label>
        <input type="time" class="form-control" style="width: 300px" id="time" />
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">serviceQty</label>
        <input type="number" class="form-control" style="width: 300px" id="qty" />
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">vendorName</label>
        <input type="text" class="form-control" style="width: 300px" id="vendorname" readonly />
      </div>
      <button id="bookingbtn" style="margin-left: 15%" type="submit" class="btn btn-primary">
        Book
      </button>
    </form>
  </div>
</body>
<footer>
  <%- include('./partials/footer.ejs')%>
</footer>

</html>